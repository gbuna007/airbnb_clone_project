<div class="container">
  <h1 class="my-2">All Flats</h1>
  <div class="row row-cols-sm-12 row-cols-md-3 row-cols-xl-5 justify-content-center p-0">
    <% @flats.each do |flat| %>
      <div class ="card p-0 m-2">
        <div class="img-container">
          <% if flat.photos.first.nil? %>
            <%= link_to cl_image_tag( "goldgate.jpg", class:"round-img p-0 m-0 img-fluid"), user_flat_path(flat.user.id, flat.id) %>
          <% else %>
          <%= render "carousel" %>
          <% end %>
        </div>
        <div class="card-body">
          <p class="card-title">><strong><%= link_to flat.name.truncate(25), user_flat_path(flat.user.id, flat.id) %></strong></p>
          <div class="p-0 m-0 text-small">
            <p>Location: <%= flat.location %></p>
            <p>Price: $<%= flat.price %></p>
            <p>Number of Occupants: <%= flat.num_occupants %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<%= render "shared/footer" %>
