<div class="container mt-3">
  <div class="navbar">
    <h1>Welcome <%= current_user.first_name %>!</h1>
    <%= link_to "Switch to Renter Dashboard", bookings_path(current_user), class: "btn btn-outline-secondary" %>
  </div>

  <div class="border mb-3 p-3 bg-light">
    <div class="mb-3 navbar">
      <h2 class="m-0">Your Flats</h2>
      <%= link_to "Add New Flat", new_flat_path(current_user), class: "btn btn-outline-secondary" %>
    </div>

    <div class="bg-white">
      <% @flats.each do |flat| %>
        <div class="notification">
          <%= cl_image_tag( "goldgate.jpg", class:"avatar-large") %>
          <%# <img src='https://kitt.lewagon.com/placeholder/users/arthur-littm' class="avatar-large" /> %>
          <div class="notification-content">
            <p><%= flat.name %></p>
          </div>

          <div class="notification-actions">
            <%= link_to 'Edit <i class="fas fa-pencil-alt"></i>'.html_safe, edit_flat_path(flat), class: "text-decoration-none"  %>
            <%= link_to 'Delete <i class="far fa-trash-alt"></i>'.html_safe, flat, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-outline-danger hoverable", class: "text-decoration-none"  %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="border mb-3 p-3 bg-light">
    <div class="mb-3 navbar">
      <h2 class="m-0">Upcoming Bookings</h2>
    </div>

    <div class="bg-white">
      <% @bookings.each do |booking| %>
        <div class="notification">
          <img src='https://kitt.lewagon.com/placeholder/users/arthur-littm' class="avatar-large" />
          <div class="notification-content">
            <p><small><%= booking.start_date %></small></p>
            <p><%= booking.flat.name %></p>
            <p><%= booking.user.first_name %> <%= booking.user.last_name %></p>
            <p>Placeholder for renter's rating</p>
          </div>
          <div class="acceptance-status me-3">
            <p><%= booking.accepted ? "Accepted" : "Pending Host Acceptance"  %></p>
          </div>
          <div class="payment-status me-3">
            <p><%= booking.payment_received ? "Paid" : "Payment Pending" %></p>
          </div>
          <div class="notification-actions">
            <a href="#">Approve <i class="fas fa-pencil-alt"></i></a>
            <a href="#">Reject <i class="far fa-trash-alt"></i></a>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="border mb-3 p-3 bg-light">
    <div class="mb-3 navbar">
      <h2 class="m-0">Past Bookings</h2>
    </div>

    <div class="bg-white">
      <% @bookings.each do |booking| %>
        <div class="notification">
          <img src='https://kitt.lewagon.com/placeholder/users/arthur-littm' class="avatar-large" />
          <div class="notification-content">
            <p><small><%= booking.end_date %></small></p>
            <p><%= booking.flat.name %></p>
          </div>

          <div class="notification-actions">
            <a href="#">See Reviews <i class="fa-solid fa-star"></i></a>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
